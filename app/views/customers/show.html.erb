<br/><br/>

<dl class="dl-horizontal">
  <dt>Nome:</dt>
  <dd><%= @customer.name %></dd>
  <dt>Endereço:</dt>
  <dd><%= @customer.address %></dd>
  <dt>Número:</dt>
  <dd><%= @customer.number %></dd>
  <dt>Bairro:</dt>
  <dd><%= @customer.district %></dd>
  <dt>CEP:</dt>
  <dd><%= @customer.zipcode %></dd>
  <dt>Cidade:</dt>
  <dd><%= @customer.city.name %></dd>
  <dt>Data de Nascimento:</dt>
  <dd><%= @customer.date_birth %></dd>
  <dt>RG/IE:</dt>
  <dd><%= @customer.rgie %></dd>
  <dt>CPF/CNPJ:</dt>
  <dd><%= @customer.cpfcnpj %></dd>
  <dt>Email:</dt>
  <dd><%= @customer.email %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Voltar', customers_path, :class => 'btn'  %>
  <%= link_to 'Editar', edit_customer_path(@customer), :class => 'btn' %>
  <%= link_to 'Excluir', customer_path(@customer), :method => 'delete', :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Confirma exclusão?')), :class => 'btn btn-danger' %>
</div>
