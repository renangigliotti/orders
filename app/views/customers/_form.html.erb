<%= form_for @customer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label 'Nome', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Endereço', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Número', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Bairro', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :district, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'CEP', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :zipcode, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Cidade', :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :city_id, City.all, :id, :name, {:prompt => true} %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Data de Nascimento', :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date_birth, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'RG/IE', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :rgie, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'CPF/CNPJ', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cpfcnpj, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Email', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit 'Gravar', :class => 'btn btn-primary' %>
    <%= link_to 'Cancelar', customers_path, :class => 'btn' %>
  </div>
<% end %>
